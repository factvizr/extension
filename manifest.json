{
  "name": "Factvizr",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Shows the truth behind Facebook's posts tagged as fake news",
  "homepage_url": "http://factvizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://*.facebook.com/*",
    "https://facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",          
        "https://facebook.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}